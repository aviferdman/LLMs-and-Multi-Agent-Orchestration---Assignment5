  "query_types": {
    "ceo_name": {
      "description": "CEO name retrieval queries",
      "query_template": "What is the CEO's name?",
      "alternative_queries": [
        "Who is the CEO?",
        "What is the name of the CEO?",
        "Who serves as CEO of the company?",
        "What is the chief executive officer's name?"
      ],
      "expected_answer_format": "Name (e.g., David Cohen, Sarah Williams)",
      "fact_template": "The CEO of the company is {name}.",
      "possible_answers": [
        "David Cohen",
        "Sarah Williams",
        "Michael Brown"
      ]
    },

    "revenue": {
      "description": "Revenue information retrieval",
      "query_template": "What was the Q3 revenue?",
      "alternative_queries": [
        "How much was the third quarter revenue?",
        "What was the revenue in Q3?",
        "What were Q3 earnings?"
      ],
      "expected_answer_format": "$XM (e.g., $50M, $75M)",
      "fact_template": "The Q3 revenue was ${amount}M.",
      "possible_amounts_range": [10, 100]
    },

    "location": {
      "description": "Headquarters location retrieval",
      "query_template": "Where is the headquarters located?",
      "alternative_queries": [
        "What city is the headquarters in?",
        "Where is the company headquartered?",
        "What is the location of headquarters?"
      ],
      "expected_answer_format": "City name (e.g., New York, London)",
      "fact_template": "The headquarters is located in {city}.",
      "possible_locations": [
        "New York",
        "London",
        "Tokyo"
      ]
    }
  },

